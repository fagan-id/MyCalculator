<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_hasil"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:textSize="50sp"
        android:layout_marginBottom="20dp"
        android:textAlignment="textEnd"
        android:hint="0"/>

    <TextView
        android:id="@+id/text_display"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="@color/white"
        android:textColor="@color/blue"
        android:textSize="30sp"
        android:textAlignment="textEnd"
        android:hint="0"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/arrow_delete"
            android:layout_width="43dp"
            android:layout_height="30dp"
            android:rotationY="-180"
            android:src="@drawable/arrow" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="4">

        <Button
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40dp"
            android:text="1"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40dp"
            android:text="2"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="3"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="+"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="4">

        <Button
            android:id="@+id/s4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="4"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="5"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="6"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s_minus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="-"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="4">

        <Button
            android:id="@+id/s7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="7"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="8"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="9"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s_kali"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="x"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="4">

        <Button
            android:id="@+id/s_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="AC"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="0"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s_hasil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/blue"
            android:padding="40sp"
            android:text="="
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/s_bagi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:padding="40sp"
            android:text="/"
            android:textColor="@color/black"
            app:cornerRadius="16dp"
            app:strokeColor="#090909"
            app:strokeWidth="1dp" />

    </LinearLayout>
</LinearLayout>